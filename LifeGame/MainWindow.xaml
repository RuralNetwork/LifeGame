<Window x:Name="mainwindow" x:Class="LifeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1000" Closing="mainwindow_Closing">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="528*"/>
            <RowDefinition x:Name="speed" Height="41*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="141*"/>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition x:Name="toolbox" Width="40*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="createWorld" Content="Crea Mondo" Grid.Column="1" HorizontalAlignment="Center" Margin="78,0,72,138" VerticalAlignment="Bottom" Width="276" Height="71" FontSize="24" Cursor="Hand" Click="createWorld_Click"/>
        <Button x:Name="startSimulation" Content="Inizia Simulazione" HorizontalAlignment="Center" Margin="78,0,72,20" VerticalAlignment="Bottom" Width="276" Height="72" Click="Button_Click" FontSize="24" Grid.Column="1" IsEnabled="False" Cursor="Hand" Grid.RowSpan="2"/>

        <Canvas x:Name="mainpanel" Margin="216,264,210,264" Grid.Column="1" HorizontalAlignment="center" VerticalAlignment="center" Height="0" Width="0"></Canvas>
        <TextBlock x:Name="opening_title" HorizontalAlignment="Center" Margin="4,100,2,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="100" Width="420" FontSize="52" Text="Il Gioco della Vita" TextAlignment="Center" Grid.Column="1"/>
        <Grid x:Name="gridToolbox" Grid.Column="3" HorizontalAlignment="Right" Height="569" VerticalAlignment="Top" Width="40" Visibility="Hidden" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="212*"/>
            </Grid.RowDefinitions>
            <Button Content="Earth" Name="earth" HorizontalAlignment="Center" Margin="0,16,0,17" VerticalAlignment="Center" Width="40" Grid.Row="0" Click="toggleBrush" Background="#FFC1C1C1" BorderThickness="0" Height="18" Cursor="Hand"/>
            <Button Content="Grass" Name="grass" HorizontalAlignment="Center" Margin="0,17,0,16" VerticalAlignment="Center" Width="40" Grid.Row="1" Click="toggleBrush" Background="White" BorderThickness="0" Height="18" Cursor="Hand" />
            <Button Content="Water" Name="water" HorizontalAlignment="Center" Margin="0,16,0,17" VerticalAlignment="Center" Width="40" Grid.Row="2" Click="toggleBrush" Background="White" BorderThickness="0" Height="18" Cursor="Hand"/>
            <Button Content="Sand"  Name="sand"  HorizontalAlignment="Center" Margin="0,23,0,10" VerticalAlignment="Center" Width="40" Grid.Row="3" Click="toggleBrush" Background="White" BorderThickness="0" Height="18" Cursor="Hand"/>
            <Button Content="Bush"  Name="bush"  HorizontalAlignment="Center" Margin="0,23,0,10" VerticalAlignment="Center" Width="40" Grid.Row="4" Click="toggleBrush" Background="White" BorderThickness="0" Height="18" Cursor="Hand"/>
            <Button Content="Berry" Name="berry" HorizontalAlignment="Center" Margin="0,23,0,10" VerticalAlignment="Center" Width="40" Grid.Row="3" Click="toggleBrush" Background="White" BorderThickness="0" Height="18" Cursor="Hand"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2" Name="gridSpeed" Visibility="Hidden">
            <Button Content="1x" Grid.Column="2" HorizontalAlignment="Left" Margin="50,11,0,0" Grid.Row="1" VerticalAlignment="Top" Width="37" Name="x1" Click="toggleSpeed"/>
            <Button Content="2x" Grid.Column="2" HorizontalAlignment="Left" Margin="90,11,0,0" Grid.Row="1" VerticalAlignment="Top" Width="37" Name="x2" Click="toggleSpeed"/>
            <Button Content="Max" Grid.Column="2" HorizontalAlignment="Left" Margin="130,11,0,0" Grid.Row="1" VerticalAlignment="Top" Width="37" Name="Max" Click="toggleSpeed"/>
        </Grid>
        <Button x:Name="loadWorldButton" Content="Carica Mondo" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Center" Width="180" Height="71" FontSize="24" Cursor="Hand" Click="loadWorld"/>
        <Button x:Name="loadGenomaButton" Content="Carica Genoma" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Center" Width="180" Height="70" FontSize="24" Cursor="Hand" Click="loadGenoma" Grid.Column="2"/>
        <Button x:Name="saveButton" Content="Salva" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Bottom" Width="75" Height="30" Visibility="Hidden"/>
        <Button x:Name="headBack" Content="Chiudi" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Bottom" Width="75" Height="30" IsEnabled="True" Visibility="Hidden" Click="goBack"/>

    </Grid>
</Window>
